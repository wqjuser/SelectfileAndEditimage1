<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wqj.demo">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/noActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.wqj.selectfileandeditimage.editimage.EditImageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.wqj.selectfileandeditimage.selectpicture.ShowPictureActivity"/>
        <activity android:name="com.wqj.selectfileandeditimage.picchooser.SelectPictureActivity"/>
        <activity android:name="com.wqj.selectfileandeditimage.selectpicture.AudioRecorderActivity"/>
        <activity android:name="com.wqj.selectfileandeditimage.selectpicture.PlayActivity"/>
        <activity android:name="com.wqj.selectfileandeditimage.selectpicture.SelectFileActivity"/>
        <activity android:name="com.wqj.selectfileandeditimage.selectpicture.SelectFileExActivity"/>
    </application>

</manifest>